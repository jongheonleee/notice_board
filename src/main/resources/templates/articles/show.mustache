{{>layouts/header}}
{{#article}}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <th>{{id}}</th>
                <td>{{title}}</td>
                <td>{{content}}</td>
            </tr>
        </tbody>
    </table>
<button type="button" class="btn btn-primary" onclick="location.href='/articles'">list</button>
<button type="button" class="btn btn-secondary" onclick="location.href='/articles/{{id}}/edit'">edit</button>
<button type="button" class="btn btn-danger" onclick="location.href='/articles/{{id}}/delete'">delete</button>

{{/article}}
{{>layouts/footer}}